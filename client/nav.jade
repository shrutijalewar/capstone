.navbar.navbar-default(role='navigation', ng-controller='NavCtrl')
  .container
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Capstone

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-hide='email')
        li: a(href='/#/') Home
        li: a(href='/#/register') Register/Login
      ul.nav.navbar-nav.navbar-right(ng-show='email')
        li: a(href='/#/') Home
        li: a(href='/#/profile') Profile
        li: a(href='/#/recipes') Recipes
        li: a(href='/#/logout') Logout
        li: a(href='/#/') {{email}}

